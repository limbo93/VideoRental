@model Vidly.ViewModels.MovieFormViewModel
@using System.Web.UI.HtmlControls

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    @Html.ValidationSummary(true, "Please fix the following error.")
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ReleseDate)
        @Html.TextBoxFor(m => m.ReleseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ReleseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GreneTypeId)
        @Html.DropDownListFor(m => m.GreneTypeId, new SelectList(Model.GreneTypes, "Id", "Grene"), "Select Grene Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.GreneTypeId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NumberInStock)
        @Html.TextBoxFor(m => m.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NumberInStock)
    </div>
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
